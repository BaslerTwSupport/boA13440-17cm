<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:v="clr-namespace:FlatFieldCalibration.Views" 
                    xmlns:vm="clr-namespace:FlatFieldCalibration.ViewModels"
                    xmlns:vw="clr-namespace:FlatFieldCalibration.Views.Wizards"
                    xmlns:vmw="clr-namespace:FlatFieldCalibration.ViewModels.Wizards">
    <DataTemplate DataType="{x:Type vm:MainViewModel}">
        <v:MainView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ImageViewModel}">
        <v:ImageView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmw:WizardPageViewModel}">
        <vw:WizardPageView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmw:WizardTrainDarkImagePageViewModel}">
        <vw:WizardTrainDarkImagePageView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vmw:WizardTrainWhiteImagePageViewModel}">
        <vw:WizardTrainWhiteImagePageView/>
    </DataTemplate>
</ResourceDictionary>